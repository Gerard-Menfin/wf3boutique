{% extends 'base.html.twig' %}

{% block title %}Détail Commande{% endblock %}

{% block titreH1 %}Détail de la commande n°{{ commande.id }}{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Numéro de commande</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ commande.montant }} €</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commande.dateEnregistrement|date('d/m/Y  à H:i') }}</td>
            </tr>
            <tr>
                <th>État</th>
                <td>{{ commande.etat }}</td>
            </tr>

            <tr>
                <th>Détails</th>
                <td>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Produit</th>
                                <th>Prix</th>
                                <th>Qté</th>
                                <th>Sous-total</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for detail in commande.details %}
                                <tr>
                                    <td>{{ detail.produit.titre }}</td>
                                    <td>{{ detail.prix }}</td>
                                    <td>{{ detail.quantite }}</td>
                                    <td>{{ detail.quantite * detail.prix }} €</td>
                                </tr>
                            {% endfor %}
                        </tbody>

                        <tfoot class="thead-dark">
                            <tr>
                                <th colspan="3">TOTAL</th>
                                <td> {{ commande.montant }} €</td>
                            </tr>
                        </tfoot>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('espace') }}"><i class="fa fa-reply"></i> Retour</a>

{% endblock %}
